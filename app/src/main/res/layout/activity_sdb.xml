<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pages.store.SdbActivity">

    <Button
        android:id="@+id/gen_sqlite_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Generate SQLite Database" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/add_book_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Book" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/add_book_orm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Book by orm" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/display_books_btn"
        android:text="display Book" />
</LinearLayout>